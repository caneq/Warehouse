@using Warehouse.Models
@model IEnumerable<Order>
@{
    ViewData["Title"] = "Мои заказы";
    Layout = "_Layout";
}

<h1>Мои заказы</h1>

@foreach (Order o in Model)
{
    <div class="card">
        <a asp-action="Details" asp-route-id="@o.OrderId" class="card-title" style="margin-left:30px;">Заказ №@o.OrderId @o.OrderDate</a>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-8">
                    @foreach (OrderItem orderItem in o.Items)
                    {
                        <div class="card card-secondary lg-12">
                            <div class="row no-gutters">
                                <div class="col-lg-2">
                                    <img src="@orderItem.Product.Pictures.FirstOrDefault()" class="card-img" alt="...">
                                </div>
                                <div class="col-lg-8">
                                    <div class="card-body">
                                        <h6 class="card-title"><a asp-controller="Products" asp-action="Details" asp-route-id="@orderItem.Product.ProductId">@orderItem.Product.Name</a></h6>
                                        <p class="card-text" style="overflow: hidden; white-space: nowrap; text-overflow: ellipsis;">@orderItem.Product.Description</p>
                                    </div>
                                </div>
                                <div class="col-sm-1">
                                    <h6><b>@orderItem.Price Руб</b></h6>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="col-auto">
                    <p>Итоговая стоимость: <b>@o.TotalPrice руб</b></p>
                    <div class="card">
                        <div class="text-center">
                            <div class="card-title">Состояние заказа:</div>
                            <p class="card-text">Ожидание оплаты</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}