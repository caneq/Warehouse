@using Warehouse.ViewModels
@using Warehouse.BusinessLogicLayer.Extensions
@model ClientRequestViewModel
@{
    ViewData["Title"] = "Внимание, вопрос";
    Layout = "_Layout";
}


<form method="post" class="order-form my-4 mx-4 col-lg-9">
    <input name="ApplicationUserId" value="@User.GetUserId()" hidden />
    <div class="container pt-4">

        <div class="row">
            <div class="col-12 mx-4 mr-4">
                <h4>Имя запроса</h4>
                <input type="text" name="Title" class="form-control" />
            </div>
            <div class="col-12">
                <div class="row mt-3 mx-4">
                    <h5>Сообщение:</h5>

                    <textarea name="MessageText" class="order-form-input form-control">

                    </textarea>

                </div>
                <div class="row mt-3 justify-content-center">
                    <div class="col-auto">
                        <button type="submit" id="btnSubmit" class="btn btn-primary d-block mx-auto btn-submit">Создать</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
