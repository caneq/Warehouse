@using Warehouse.ViewModels
@model ClientRequestViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Запрос №1. Состояние заказа";
}


<form class="order-form my-4 mx-4 col-lg-9" asp-controller="ClientRequests" asp-action="AddMessage" method="post">
    <input name="id" value="@Model.Id" hidden>
    <div class="container pt-4">

        <div class="row">
            <div class="col-12">
                <h3>@Model.Title</h3>
                <hr class="mt-1">
            </div>
            <div class="col-12">
                <div class="row mt-3 mx-4">
                    <h4 class="col-lg-11">Сообщения:</h4>
                    <div class="col-auto">
                        @foreach (var m in Model.Messages)
                        {
                            <p><b>@m.User.UserName</b>:@m.MessageText</p>
                        }
                    </div>
                </div>
                <div class="row mt-3 mx-4">
                    <span>Добавить сообщение:</span>
                    <textarea name="MessageText" class="order-form-input">

                    </textarea>
                </div>
                <div class="row mt-3 justify-content-center">
                    <div class="col-auto">
                        <button type="submit" id="btnSubmit" class="btn btn-primary d-block mx-auto btn-submit">Ответить</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>